@if (Show)
{
    <div class="alert alert-success" role="alert">Keyword added!</div>
}

@code {
    private bool show;

    [Parameter]
    public bool Show
    {
        get => show;
        set
        {
            if (value != show)
            {
                show = value;
                ShowChanged?.InvokeAsync(show);
            }
        }
    }

    [Parameter]
    public EventCallback<bool>? ShowChanged { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; } = default!;

    public void Dismiss() => Show = false;
}
